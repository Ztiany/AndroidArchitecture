<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CounterButton">
        <attr name="ccb_count" format="integer" />
        <attr name="ccb_text" format="string|reference" />
        <attr name="ccb_text_hint_format" format="string|reference" />
        <attr name="ccb_text_counting_color" format="color|reference" />
        <attr name="ccb_text_normal_color" format="color|reference" />
        <attr name="ccb_text_disable_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="ClearableTextInputLayout">
        <attr name="ctil_clear_drawable" format="reference" />
        <attr name="ctil_enable_clear_drawable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TriangleView">
        <attr name="tv_triangle_solid_color" format="color|reference" />
        <attr name="tv_triangle_bottom_color" format="color|reference" />
        <attr name="tv_triangle_stroke_color" format="color|reference" />
        <attr name="tv_triangle_stroke_width" format="dimension|reference" />
        <attr name="tv_triangle_angle_percent" format="float" />
        <attr name="tv_triangle_direction" format="enum">
            <enum name="top" value="1" />
            <enum name="down" value="2" />
            <enum name="left" value="3" />
            <enum name="right" value="4" />
        </attr>
    </declare-styleable>


</resources>