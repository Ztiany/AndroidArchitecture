<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme_ShareDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/Style_Anim_Bottom_In</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustResize</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!--Anim-->
    <style name="Style_Anim_Bottom_In" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>


</resources>