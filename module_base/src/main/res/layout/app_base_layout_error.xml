<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@id/base_retry_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/base_img_error"
        app:layout_marginTopPercent="25%"
        tools:ignore="ContentDescription"/>


    <TextView
        android:id="@id/base_retry_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/base_retry_icon"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/widget_margin_least"
        android:paddingBottom="8dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:text="@string/error_load_fail_tips"
        android:textSize="@dimen/text_little"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@id/base_retry_btn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/base_retry_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/widget_margin_normal"
        android:text="@string/error_retry_action_tips"
        android:textColor="@color/black"
        />

</android.support.percent.PercentRelativeLayout>