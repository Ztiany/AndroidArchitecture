<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    tools:ignore="KeyboardInaccessibleWidget"
    tools:paddingBottom="14dp"
    tools:paddingEnd="@dimen/common_edge"
    tools:paddingStart="@dimen/common_edge"
    tools:paddingTop="14dp">

    <TextView
        android:id="@+id/tvWidgetItemEtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:textColor="#333333"
        android:textSize="@dimen/text_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="消息通知" />

    <EditText
        android:id="@+id/etWidgetItemSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="6dp"
        android:background="@null"
        android:gravity="end"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="50"
        android:maxLines="2"
        android:textColor="#999999"
        android:textColorHint="#CCCCCC"
        android:textSize="@dimen/text_normal"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvWidgetItemEtTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor"
        tools:text="未认证" />

</androidx.constraintlayout.widget.ConstraintLayout>