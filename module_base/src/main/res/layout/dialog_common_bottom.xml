<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.FrameLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDialogNegative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/cancel_"
            android:textColor="#808080"
            android:textSize="@dimen/text_large"
            android:visibility="visible" />

        <View
            android:id="@+id/viewDialogBtnDivider"
            android:layout_width="@dimen/common_separate_width"
            android:layout_height="match_parent"
            android:background="#EFEFEF"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvDialogPositive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/confirm"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_large" />

    </LinearLayout>

    <View
        android:id="@+id/viewBottomDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_separate_width"
        android:background="#EFEFEF" />

</merge>